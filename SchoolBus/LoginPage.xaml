<Page x:Class="SchoolBusManagement.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login" Width="800" Height="450" Background="GhostWhite">
    <Grid>
        <StackPanel Margin="10">
            <Image Source="C:\Users\Antec\source\repos\SchoolBus\SchoolBus\Properties\schbl.png" Width="300" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Text="Login" FontWeight="Bold" TextAlignment="Center" Width="50" FontSize="16"/>
            <StackPanel Orientation="Horizontal" Width="300" Margin="0 10">
                <TextBlock Text="Username:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <TextBox x:Name="UsernameTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="300" Margin="0 10">
                <TextBlock Text="Password:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <PasswordBox x:Name="PasswordBox" Width="200"/>
            </StackPanel>
            <Button Content="Login" Background="Gold" Foreground="Red"  Click="Login_Click" Width="300" HorizontalAlignment="Center" Margin="0 20"/>
            <Button Content="Register" Background="Gold" Foreground="Red"  Click="Register_Click" Width="300" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
